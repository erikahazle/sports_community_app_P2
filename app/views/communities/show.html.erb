<div class="community-show-heading">
  <h2 id="community-show-name"><%= @community.name %></h2>
  <%= link_to 'Add a post', new_sport_community_post_path(@sport, @community) %> 
</div>

<div class="community-show-content">
  <% @community.posts.each do |post| %>
    <div class="community-post-item">
      <h3><%= post.title %></h3> 
      <h5>by <%= post.user_name %></h5>
      <p><%= post.content %></p>
      <%= link_to 'Read More', sport_community_post_path(@sport, @community, post) %>
    </div>
  <% end %> 
</div>
